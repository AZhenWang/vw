create table fut_basic (
   id int not null auto_increment,
   ts_code	VARCHAR(16)	default null comment'合约代码',
   symbol	VARCHAR(16)	default null comment'交易标识',
   exchange	VARCHAR(8)	default null comment'交易市场',
   name	VARCHAR(16)	default null comment'中文简称',
   fut_code	VARCHAR(16)	default null comment'合约产品代码',
   multiplier float default null comment'合约乘数',
   trade_unit	VARCHAR(16)	default null comment'交易计量单位',
   per_unit	float	default null comment'交易单位(每手)',
   quote_unit	VARCHAR(16)	default null comment'报价单位',
   quote_unit_desc	VARCHAR(16)	default null comment'最小报价单位说明',
   d_mode_desc	VARCHAR(16)	default null comment'交割方式说明',
   list_date	CHAR(8)	default null comment'上市日期',
   delist_date	CHAR(8)	default null comment'最后交易日期',
   d_month	CHAR(2)	default null comment'交割月份',
   last_ddate	VARCHAR(16)	default null comment'最后交割日',
   trade_time_desc	VARCHAR(16)	default null comment'交易时间说明',
   created_at timestamp not null default CURRENT_TIMESTAMP,
   PRIMARY KEY(id),
   UNIQUE `ts_code_idx`  (`ts_code`)
)ENGINE=MyISAM DEFAULT CHARSET=utf8 comment'期货合约信息';

create table fut_daily (
   id int not null auto_increment,
   date_id INT NOT NULL,
   fut_id INT NOT NULL,
   pre_close float	default null comment'昨收盘价',
   pre_settle float	default null comment'昨结算价',
   open float	default null comment'开盘价',
   high float	default null comment'最高价',
   low float	default null comment'最低价',
   close float	default null comment'收盘价',
   settle float	default null comment'结算价',
   change1 float	default null comment'涨跌1 收盘价-昨结算价',
   change2 float	default null comment'涨跌2 结算价-昨结算价',
   vol float	default null comment'成交量(手)',
   amount float	default null comment'成交金额(万元)',
   oi float	default null comment'持仓量(手)',
   oi_chg float	default null comment'持仓量变化',
   delv_settle float	default null comment'交割结算价',
   created_at timestamp not null default CURRENT_TIMESTAMP,
   PRIMARY KEY(id),
   CONSTRAINT symbol UNIQUE KEY `unique_fut_date`(`date_id`, `fut_id`)
)ENGINE=MyISAM DEFAULT CHARSET=utf8 comment'期货日线行情';